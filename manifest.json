{
  "manifest_version": 3,
  "name": "X-Treeverse",
  "version": "0.1.0",
  "description": "Visualize X (Twitter) conversation threads as interactive trees - a fork of Treeverse",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_title": "Treeverse"
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://mobile.twitter.com/*",
        "https://mobile.x.com/*"
      ],
      "js": ["src/viewer/main.ts"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://mobile.twitter.com/*",
    "https://mobile.x.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "resources/*",
        "icons/*"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://mobile.twitter.com/*",
        "https://mobile.x.com/*"
      ]
    }
  ]
}
